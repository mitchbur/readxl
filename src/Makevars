CXX_STD = CXX11
PKG_CPPFLAGS = -Iunix -I.
PKG_CFLAGS = $(C_VISIBILITY)
PKG_CXXFLAGS = $(CXX_VISIBILITY)

SOURCES = cpp11.cpp ColSpec.cpp XlsWorkBook.cpp XlsWorkSheet.cpp XlsxWorkBook.cpp XlsxWorkSheet.cpp zip.cpp
OBJECTS = $(SOURCES:.cpp=.o) cran.o libxls/xlstool.o libxls/endian.o libxls/ole.o libxls/xls.o libxls/locale.o

all: $(SHLIB)

.PHONY: clean
clean:
	rm -f $(SHLIB) $(OBJECTS)
